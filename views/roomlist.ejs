<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="/stylesheets/roomlist.css">
   <title>Document</title>
   <script src="https://kit.fontawesome.com/681316c72d.js" crossorigin="anonymous"></script>
   <script>
      let Rooms = <%- JSON.stringify(rooms) %>;
      console.log(Rooms);
   </script>
</head>

<body>
   <!-- header -->
   <header>
      <a class="decoration-none logout" href="/">Logout</a>
      <a class="decoration-none" href="/Profile">
         <div class="profile"></div>
      </a>
      <a class="decoration-none" href="">
         <!--logo here--></a>
   </header>

   <!-- main -->
   <main>

      <!-- search part -->
      <div class="search-part">
         <form>

            <!-- select -->
            <span class="dropdown-el" id="dropdown">
               <input  type="radio" name="Type" checked="checked" value="all" id="all" onchange="queryfunction()"><label for="all">All</label>
               <% for(var i=0; i < types.length; i++) { %>
               <input type="radio" name="Type" value="<%= types[i] %>" id="<%= types[i] %>" onchange="queryfunction"><label for="<%= types[i] %>"><%= types[i] %></label>
               <% } %>
            </span>
            <div class="search-items">
               <label for="searchbar" class="l-s">
                  <i class="fas fa-search"></i>
               </label>
               <input type="search" id="searchbar">
            </div>
            <!-- end of select -->
            <button class="createbutton" id="createbutton">Create</button>
         </form>
      </div>
      <!-- popup -->
      <div class="popup-background hidden" id="popup-background">
         <div class="popup">
            <form action="room/create" method="post">
               <input type="text" name="Name" id="room-name" placeholder="Room name" required>
               <select id="type" name="GameType" class="typebox" required>
                  <% for(var i=0; i < types.length; i++) { %>
                  <option value=<%= types[i] %>"><%= types[i] %></option>
                  <% } %>
               </select>
               <input type="number" name="MaxMember" id="members" class="inputbox" placeholder="Members" min="8"
                  required>
               <label class="switch">
                  <input name="Private" type="checkbox" id="Private">
                  <span class="slider round"></span>
               </label>
               <input type="password" name="Password" id="Password" class="inputbox" placeholder="Password" required
                  disabled>
               <input type="submit" value="Create" class="createpopup">
            </form>
            <button class="closepopup" id="closepopup"><i class="fas fa-times"></i></button>
         </div>
      </div>
      <!-- table -->
      <table id="ROOMS">
         <tbody>
            <tr>
               <th>#</th>
               <th>Room Name</th>
               <th>Game Type</th>
               <th>Members</th>
               <th>Private</th>
               <th>Join</th>
            </tr>
         </tbody>
      </table>
   </main>
   <!-- footer -->
   <footer>ALl rights are registerd to Brainy Coders</footer>
   <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"></script>
   <script src="/javascripts/roomlist.js"></script>
</body>

</html>